  fi

  # Grant permissions
  echo "-- GRANTING PERMISSIONS"
  chown apache -R $WPCONTENT
  chmod 2775 $WPCONTENT
  find $WPCONTENT -type d -exec sudo chmod 2775 {} \;
  find $WPCONTENT -type f -exec sudo chmod 0664 {} \;

  # Enable service
  echo "-- ENABLE AND START SERVICE"
  systemctl enable httpd
  systemctl start httpd
  systemctl status httpd
fi

